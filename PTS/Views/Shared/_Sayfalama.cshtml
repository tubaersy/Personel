
@{
    int aktifsayfa = Convert.ToInt32(ViewData["aktifsayfa"]);

    int toplamsatir = Convert.ToInt32(ViewData["toplamsatir"]);
    int toplamsayfa = Convert.ToInt32(ViewData["toplamsayfa"]);

    string controllername = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    string actionname = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();

    if (toplamsatir == 0)
    {
        <div class="sayfalama">
            
            <a href="/@controllername/@actionname"><input type="submit" value="İlk" /></a>
            <a href="/@controllername/@actionname"><input type="submit" value="Geri" /></a>
            <input type="text" value="0" />
            <a href="/@controllername/@actionname"><input type="submit" value="İleri" /></a>
            <a href="/@controllername/@actionname"><input type="submit" value="Son" /></a>
        </div>
    }

    else
    {
        if (aktifsayfa == 0)
        {
            <div class="sayfalama">
                <a href="/@controllername/@actionname?aktifsayfa=0"><input type="submit" value="İlk" /></a>
                <a href="/@controllername/@actionname?aktifsayfa=0"><input type="submit" value="Geri" /></a>
                <input type="text" value="@aktifsayfa" />
                <a href="/@controllername/@actionname?aktifsayfa=@(@aktifsayfa+1)"><input type="submit" value="İleri" /></a>
                <a href="/@controllername/@actionname?aktifsayfa=@(@toplamsayfa-1)"><input type="submit" value="Son" /></a>
            </div>
        }
        else if (aktifsayfa == toplamsayfa - 1)
        {
            <div class="sayfalama">
                <a href="/@controllername/@actionname?aktifsayfa=0"><input type="submit" value="İlk" /></a>
                <a href="/@controllername/@actionname?aktifsayfa=@(@aktifsayfa-1)"><input type="submit" value="Geri" /></a>
                <input type="text" value="@aktifsayfa" />
                <a href="/@controllername/@actionname?aktifsayfa=@(@aktifsayfa)"><input type="submit" value="İleri" /></a>
                <a href="/@controllername/@actionname?aktifsayfa=@(@toplamsayfa-1)"><input type="submit" value="Son" /></a>
            </div>
        }
        else
        {
            <div class="sayfalama">
                <a href="/@controllername/@actionname?aktifsayfa=0"><input type="submit" value="İlk" /></a>
                <a href="/@controllername/@actionname?aktifsayfa=@(@aktifsayfa-1)"><input type="submit" value="Geri" /></a>
                <input type="text" value="@aktifsayfa" />
                <a href="/@controllername/@actionname?aktifsayfa=@(@aktifsayfa+1)"><input type="submit" value="İleri" /></a>
                <a href="/@controllername/@actionname?aktifsayfa=@(@toplamsayfa-1)"><input type="submit" value="Son" /></a>
            </div>
        }
    }
}
