        function istekGonder(url, seciliDeger) {
            var cevap = '';
            var xhr = new XMLHttpRequest();
            // 3 parametre isteğin beklenip cevaba atılmaısın sağlıyor
            xhr.open('GET', url + seciliDeger, false);

            xhr.onload = function () {
                if (xhr.status === 200) {
                    cevap = xhr.responseText;
                } else {
                    alert(xhr.status);
                }
            }

            xhr.send();

            return cevap;
        };
    </script>
