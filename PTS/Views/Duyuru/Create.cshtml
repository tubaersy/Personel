@model PTS.Models.DUYURU
@{
    ViewBag.Title = "Create";
}

<div class="row" style="margin-bottom:20px;">
    <div class="col" style="margin-left:60px;">
        <h1>Duyuru Oluştur/Düzenle</h1>
    </div>
</div>

<div class="row justify-content-center align-items-center">
    <div class="col-6 p-3 arkaplangolgeli">
        @using (Html.BeginForm("Create", "Duyuru", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group col-12">
                @Html.Label("Duyuru Refno:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })
                @Html.EditorFor(model => model.DUYURU_REFNO, new { htmlAttributes = new { @class = "form-control col-9", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.DUYURU_REFNO, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-12">
                @Html.Label("Duyuru Başlık:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })
                @Html.EditorFor(model => model.DUYURU_BASLIK, new { htmlAttributes = new { @class = "form-control col-9" } })
                @Html.ValidationMessageFor(model => model.DUYURU_BASLIK, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-12">
                @Html.Label("Duyuru İçeriği:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })
                @Html.EditorFor(model => model.DUYURU_ICERIK, new { htmlAttributes = new { @class = "form-control col-9",@type="textarea" } })
                @Html.ValidationMessageFor(model => model.DUYURU_ICERIK, "", new { @class = "text-danger" })

            </div>
            <div class="form-group row" style="margin-top:20px; margin-left:60px;">
                <div class="col-6"></div>
                <div class="col-4">
                    <input type="submit" value="Kaydet" style="background-color: #4CAF50; color:white" class="btn btn-default p-2" />
                </div>
                <div class="col-2">
                    @Html.ActionLink("Vazgeç", "Index", null, new { @style = "background-color: #da7c0c; color:white", @class = "btn btn-default p-2" })
                </div>
            </div>


        }
    </div>
</div>

