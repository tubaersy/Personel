@using PTS.Models;
@model SERTIFIKA
@{
    ViewBag.Title = "Create";
    List<PERSONEL> personel = ViewData["personel"] as List<PERSONEL>;

}
<div class="row" style="margin-bottom:20px;">
    <div class="col" style="margin-left:60px;">
        <h1> Sertifika Oluştur/Düzenle</h1>
    </div>
</div>

<div class="row justify-content-center align-items-center">
    <div class="col-6 p-3 arkaplangolgeli">
        @using (Html.BeginForm("Create", "Sertifika", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group col-12">
                @Html.Label("Sertifika Refno:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold",@style = "justify-content: flex-start", @for = "maas-ref" })
                @Html.EditorFor(model => model.SERTIFIKA_REFNO, new { htmlAttributes = new { @id = "maas-ref", @class = "form-control col-9", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.SERTIFIKA_REFNO, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-12">
                @Html.Label("Sertifika Adı:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })
                @Html.EditorFor(model => model.SERTIFIKA_ADI, new { htmlAttributes = new { @class = "form-control col-9" } })
                @Html.ValidationMessageFor(model => model.SERTIFIKA_ADI, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-12">
                <label for="PERSONEL_REFNO" class="control-label col-3 font-weight-bold" style="justify-content: flex-start">Kullanıcı Adı :</label>
                <select name="PERSONEL_REFNO" id="PERSONEL_REFNO" class="form-control col-9">
                    @foreach (var k in personel)
                    {
                        if (Model.PERSONEL_REFNO == k.PERSONEL_REFNO)
                        {
                            <option selected value="@k.PERSONEL_REFNO">@k.ADI_SOYADI</option>
                        }
                        else
                        {
                            <option value="@k.PERSONEL_REFNO">@k.ADI_SOYADI</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group col-12">
                @Html.Label("Geçerlilik Süresi:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })
                @Html.EditorFor(model => model.GECERLILIK_SURESI, new { htmlAttributes = new { @class = "form-control col-9" } })
                @Html.ValidationMessageFor(model => model.GECERLILIK_SURESI, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-12">
                @Html.Label("Alındığı Tarih:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })

                @Html.EditorFor(model => model.ALINAN_TARIHI, new { htmlAttributes = new { @class = "form-control col-9", @type = "date", @Value = Model.ALINAN_TARIHI.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.ALINAN_TARIHI, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-12">
                @Html.Label("Alınan Kurum:", htmlAttributes: new { @class = "control-label col-3 font-weight-bold", @style = "justify-content: flex-start" })
                @Html.EditorFor(model => model.ALINAN_KURUM, new { htmlAttributes = new { @class = "form-control col-9" } })
                @Html.ValidationMessageFor(model => model.ALINAN_KURUM, "", new { @class = "text-danger" })

            </div>

            <div  class="form-group row" style="margin-top:20px; margin-left:60px;">
                <div class="col-6"></div>
                <div class="col-4">
                    <input type="submit" value="Kaydet" style="background-color: #4CAF50; color:white" class="btn btn-default p-2" />
                </div>
                <div class="col-2">
                    @Html.ActionLink("Vazgeç", "Index", null, new { @style = "background-color: #da7c0c; color:white", @class = "btn btn-default p-2" })
                </div>
            </div>


        }
    </div>
</div>
