<div class="container bootstrap snippet">
    <div class="row margin-bottom-10">
        <div class="col-md-6">
            <div>
                <div id="container" style="min-width: 310px; height: 400px; max-width: 400px; margin: 0 auto"></div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dogumarkaplan">
                <table class="table" style="background:white;">
                    <thead class="class=" thead-light"">
                        <tr class="font-weight-bold">
                            <th>RESİM</th>
                            <th>ADI SOYADI</th>
                            <th> DOĞUM GÜNÜ TARİHİ</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img id="img@(@item.PERSONEL_REFNO)" class="dogumgunuresim" src="~/Images/@item.RESIM" /></td>

                            <td>@Html.DisplayFor(model => item.ADI_SOYADI)</td>
                            <td>@Html.DisplayFor(model => item.DOGUM_GUNU_TARIHI)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


<div id="sag" style="margin-right:-40px">
    <div class="col-6 p-3 ">
        <div class="col-md-12 border-radius-10">
            <div class="discerc">
                <center>
                    <div class="iccerc">
                        <div class="source">
                            <a href=""
                               target="_blank">
                                <img style="border:none;height:20px;float:right;" />

                            </a>
                        </div>
                        <a class="anabaslik">Duyurular</a>
                        <MARQUEE direction=up width=150; height=340px;>
                            <center>
                                <br />
                                <table>
                                    <thead>
                                        <tr>
                                            <th style="color:#478dad;">Başlık </th>
                                            <th style="color:#478dad;">İçerik</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in duyuru)
                                    {
                                        <tr>
                                            <th>@Html.Raw(item.DUYURU_BASLIK)</th>

                                            <th>
                                                @Html.Raw(item.DUYURU_ICERIK)
                                                <hr />
                                            </th>

                                        </tr>

                                    }

                                </table>


                            </center>
                        </MARQUEE>
                    </div>
                </center>
            </div>

        </div>
    </div>
</div>



<style>
    .source {
        position: absolute;
        bottom: 0px;
        right: 0px;
    }

    .anabaslik {
        font-family: Verdana;
        color: #0088ff;
        font-weight: bold;
        font-size: 16px;
        display: block;
        width: 150px;
        height: 26px;
        border-top: 1px solid #aaa;
        border-bottom: 1px solid #aaa;
        background-color: #e9e9e9
    }

    .baslik {
        color: #0088ff;
        font-weight: bold;
        font-size: 19px;
    }

    .duyur {
        font-family: Verdana;
        font-size: 13px;
    }

    .iccerc {
        -moz-border-radius: 8px;
        border-radius: 8px;
        position: relative;
        background-color: #fff;
        padding-top: 5px;
        margin-top: 10px;
        width: 160px;
        height: 380px !important;
        border: 1px solid #ccc
    }

    .discerc {
        -moz-border-radius: 6px;
        border-radius: 6px;
        background-color: #478dad;
        width: 180px;
        height: 400px !important;
        border: 1px solid #aaa
    }
</style>




<script>
    $(document).ready(function () {
        $.getJSON("/Home/GetData", function (data) {
            Highcharts.chart('container', {
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: 'Çalışan Sayısı'
                },
                tooltip: {
                    pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: true,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                            style: {
                                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                            }
                        }
                    }
                },
                series: [{
                    name: 'Yüzde',
                    colorByPoint: true,
                    data: [{
                        name: 'Yazılım',
                        y: data.Yazılım
                    }, {
                        name: 'Muhasebe',
                        y: data.Muhasebe
                    }, {
                        name: 'İdari',
                        y: data.İdari
                    }]
                }]
            });
        });
    });
</script>